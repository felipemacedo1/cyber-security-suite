<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Keylogger Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      
      <Separator />
      
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints minWidth="100" />
         </columnConstraints>
         
         <Label text="Platform:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <ComboBox fx:id="platformCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity" />
         
         <Label text="Output Path:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <TextField fx:id="outputPathField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Button text="Browse" onAction="#browseOutputPath" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         
         <CheckBox fx:id="stealthModeCheck" text="Stealth Mode" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <CheckBox fx:id="encryptionCheck" text="Encrypt Output" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </GridPane>
      
      <Separator />
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Button fx:id="startBtn" text="Start Keylogger" onAction="#startKeylogger" />
         <Button fx:id="stopBtn" text="Stop" onAction="#stopKeylogger" />
         <Button text="Clear Log" onAction="#clearLog" />
         <Region HBox.hgrow="ALWAYS" />
         <ProgressBar fx:id="monitorProgress" prefWidth="150" />
      </HBox>
      
      <Separator />
      
      <Label text="Keylogger Output:" />
      <TextArea fx:id="logArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" />
   </children>
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
</fx:root>