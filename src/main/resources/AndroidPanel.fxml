<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Android Stealth Monitor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      
      <Separator />
      
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints minWidth="100" />
         </columnConstraints>
         
         <Label text="Device ID/IP:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <TextField fx:id="deviceIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
         <Button text="Refresh" onAction="#refreshDevices" GridPane.columnIndex="2" GridPane.rowIndex="0" />
         
         <Label text="Service Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <ComboBox fx:id="serviceCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity" />
         
         <HBox spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
            <CheckBox fx:id="accessibilityCheck" text="Accessibility Service" />
            <CheckBox fx:id="deviceAdminCheck" text="Device Admin" />
            <CheckBox fx:id="rootModeCheck" text="Root Mode" />
         </HBox>
      </GridPane>
      
      <Separator />
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Button fx:id="connectBtn" text="Connect Device" onAction="#connectDevice" />
         <Button fx:id="installBtn" text="Install APK" onAction="#installApk" />
         <Button fx:id="startBtn" text="Start Monitor" onAction="#startMonitoring" />
         <Button fx:id="stopBtn" text="Stop" onAction="#stopMonitoring" />
         <Button text="Clear Log" onAction="#clearLog" />
         <Region HBox.hgrow="ALWAYS" />
         <ProgressBar fx:id="connectionProgress" prefWidth="150" />
      </HBox>
      
      <Separator />
      
      <Label text="Device Log:" />
      <TextArea fx:id="deviceLogArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" />
   </children>
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
</fx:root>