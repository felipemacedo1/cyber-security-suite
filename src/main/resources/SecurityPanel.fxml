<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Advanced Security Engine" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      
      <Separator />
      
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints minWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         
         <Label text="Security Status:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <Label fx:id="securityStatusLabel" text="Initializing..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
         
         <Label text="Detection Progress:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <ProgressBar fx:id="detectionProgress" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity" />
      </GridPane>
      
      <Separator />
      
      <Label text="Detection Results:" style="-fx-font-weight: bold;" />
      
      <HBox spacing="20">
         <VBox spacing="5">
            <Label text="Detection Status:" style="-fx-font-weight: bold;" />
            <CheckBox fx:id="vmDetectionCheck" text="Virtual Machine" disable="true" />
            <CheckBox fx:id="sandboxDetectionCheck" text="Sandbox Environment" disable="true" />
            <CheckBox fx:id="debuggerDetectionCheck" text="Debugger Present" disable="true" />
         </VBox>
         
         <VBox spacing="5">
            <Label text="Security Features:" style="-fx-font-weight: bold;" />
            <CheckBox fx:id="polymorphicCheck" text="Polymorphic Engine" disable="true" />
            <CheckBox fx:id="cryptoCheck" text="Military Crypto" disable="true" />
         </VBox>
         
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Confidence Score:" style="-fx-font-weight: bold;" />
            <Slider fx:id="confidenceSlider" disable="true" />
            <Label fx:id="confidenceLabel" text="Confidence: 0.00" />
         </VBox>
      </HBox>
      
      <Separator />
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Button fx:id="runDetectionBtn" text="Run Security Detection" onAction="#runSecurityDetection" />
         <Button fx:id="generateVariantBtn" text="Generate Variant" onAction="#generatePolymorphicVariant" />
         <Button fx:id="testCryptoBtn" text="Test Crypto" onAction="#testCryptography" />
         <Button fx:id="clearLogBtn" text="Clear Log" onAction="#clearLog" />
      </HBox>
      
      <Separator />
      
      <Label text="Security Log:" />
      <TextArea fx:id="detectionResults" VBox.vgrow="ALWAYS" editable="false" wrapText="true" 
                style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 11px;" />
   </children>
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
</fx:root>