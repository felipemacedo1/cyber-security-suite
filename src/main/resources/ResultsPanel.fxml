<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="ðŸ“Š Attack Results" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="totalLabel" text="Total: 0" style="-fx-font-weight: bold;"/>
        <Label fx:id="successLabel" text="Success: 0" style="-fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        <Label fx:id="failureLabel" text="Failed: 0" style="-fx-font-weight: bold; -fx-text-fill: #f44336;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="exportBtn" text="ðŸ“¤ Export" onAction="#exportResults"/>
        <Button fx:id="clearBtn" text="ðŸ—‘ Clear" onAction="#clearResults" 
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
    </HBox>
    
    <SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <TableView fx:id="resultsTable" SplitPane.resizableWithParent="true">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        
        <HBox spacing="10" SplitPane.resizableWithParent="false">
            <LineChart fx:id="successChart" prefHeight="200" HBox.hgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" upperBound="100"/>
                </yAxis>
            </LineChart>
            
            <PieChart fx:id="protocolChart" prefWidth="300" prefHeight="200"/>
        </HBox>
    </SplitPane>
</fx:root>