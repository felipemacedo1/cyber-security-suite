<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="10.0" styleClass="control-bar">
         <children>
            <Label text="Profile:" />
            <ComboBox fx:id="profileCombo" prefWidth="120.0" />
            <Label text="Target:" />
            <TextField fx:id="targetField" prefWidth="200.0" promptText="IP or hostname" />
            <Label text="Protocol:" />
            <ComboBox fx:id="protocolCombo" prefWidth="80.0" />
            <Label text="Threads:" />
            <Spinner fx:id="threadsSpinner" prefWidth="80.0" />
         </children>
      </HBox>
      
      <HBox spacing="10.0" styleClass="control-bar">
         <children>
            <ComboBox fx:id="wifiNetworkCombo" onAction="#selectWifiNetwork" prefWidth="300.0" />
            <Button fx:id="scanWifiBtn" onAction="#scanWifiNetworks" text="Scan WiFi" />
            <Button fx:id="startBtn" onAction="#startAttack" styleClass="start-button" text="Start Attack" />
            <Button fx:id="stopBtn" onAction="#stopAttack" styleClass="stop-button" text="Stop" />
            <Button onAction="#clearOutput" styleClass="clear-button" text="Clear" />
         </children>
      </HBox>
      
      <HBox spacing="20.0" styleClass="status-bar">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="statsLabel" styleClass="metric-label" text="Total: 0 | Success: 0 | Failed: 0 | Threads: 0" />
                  <ProgressBar fx:id="attackProgress" prefWidth="300.0" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="speedLabel" styleClass="metric-label" text="Speed: 0 attempts/sec | Success Rate: 0%" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <SplitPane dividerPositions="0.6" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <VBox>
               <children>
                  <Label styleClass="section-header" text="Real-time Performance Monitor" />
                  <LineChart fx:id="performanceChart" animated="false" createSymbols="false" VBox.vgrow="ALWAYS">
                     <xAxis>
                        <NumberAxis fx:id="xAxis" label="Time (seconds)" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis fx:id="yAxis" label="Attempts per second" />
                     </yAxis>
                  </LineChart>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label styleClass="section-header" text="Attack Output" />
                  <TextArea fx:id="outputArea" editable="false" styleClass="output-area" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>